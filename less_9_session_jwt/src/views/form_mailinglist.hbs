<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-10">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-8 col-xl-6 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Newsletter Form</p>

                <form class="mx-1 mx-md-4" method="POST">

                  <div class="form-group mb-4">
                    <label for="newsSelect">Select News</label>
                    <select class="form-select" id="newsSelect" name="news">
                      {{#each newsList}}
                        <option value="{{this.id}}">{{this.title}}</option>
                      {{/each}}
                    </select>
                  </div>

                  <div class="mb-3">
                    <label for="emailInput" class="form-label">Add Email</label>
                    <div class="input-group">
                        <input type="email" class="form-control" id="emailInput" />
                        <button type="button" class="btn btn-primary" onclick="addEmail()">Add</button>
                    </div>
                  </div>

                  <input type="hidden" id="emails" name="emails" />

                  <div class="mb-3">
                    <label for="emailList" class="form-label">Emails</label>
                    <ul class="list-group" id="emailList"></ul>
                  </div>

                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" class="btn btn-primary btn-lg">Send</button>
                  </div>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

